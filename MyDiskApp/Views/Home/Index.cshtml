@model List<UserFile>

@if(User.Identity.IsAuthenticated)
{

    <h3>Добро пожаловать @User.Identity.Name!</h3>
    <table>
        <tr>
            <td>
                <input type="button" value="Добавить файл?" onclick="location.href='@Url.Action("AddFile", "Home")'" />
            </td>
            <td>
                <input type="button" value="Удалить файл?" onclick="location.href='@Url.Action("DeleteFile", "Home")'" />
            </td>
        </tr>
    </table>
    <div>   
        
        @if (Model.Count == 0)
        {
            <h4>Файлов нет</h4>
        }
        else
        {
            @foreach (var f in Model)
            {
                <h4>@f.Name</h4>
            }
        }
    </div>
}
else
{
    <h3>Авторизуйтесь!</h3>
}