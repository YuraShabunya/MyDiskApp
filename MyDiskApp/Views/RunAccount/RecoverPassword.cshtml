@model MyDiskApp.ViewModels.RecoverModel

<form asp-action="RecoverPassword" asp-controller="RunAccount" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Введите новый Login</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="SecretWord">Введите секретное слово</label>
            <input type="text" asp-for="SecretWord" />
            <span asp-validation-for="SecretWord" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите новый пароль</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>